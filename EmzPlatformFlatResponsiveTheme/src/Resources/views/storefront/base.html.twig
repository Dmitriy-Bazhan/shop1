           let wrapp_two = document.getElementsByClassName('m-top-link--arr');
           for (let name of wrapp_two) {
               name.addEventListener('click', function() {
                   let attr = this.getAttribute('data-ul');

                   if (attr) {
                       let ul = document.getElementById(attr);

                       if (ul) {
                           if (ul.classList.contains('d-none') ) {
                               ul.classList.remove('d-none');
                               ul.classList.add('d-block');
                               this.classList.add('b-is--open');
                           } else {
                               // do
                               ul.classList.remove('d-block');
                               ul.classList.add('d-none');
                               this.classList.remove('b-is--open');
                           }
                       }
                   }
               });
           }
       </script>
