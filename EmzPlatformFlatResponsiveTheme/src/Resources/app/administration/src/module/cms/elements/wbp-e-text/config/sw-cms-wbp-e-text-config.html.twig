{% block sw_cms_wbp_e_text_config %}
    <sw-tabs
            class="sw-cms-wbp-e-text-config__tabs"
            default-item="content"
    >

        <template slot-scope="{ active }">
            {% block sw_cms_wbp_e_text_config_text_tab_content %}
                <sw-tabs-item
                        :title="$tc('sw-cms.elements.general.config.tab.content')"
                        name="content"
                        :active-tab="active"
                >
                    {{ $tc('sw-cms.elements.general.config.tab.content') }}
                </sw-tabs-item>
            {% endblock %}
            {% block sw_cms_wbp_e_text_config_tab_options %}
                <sw-tabs-item
                        :title="$tc('sw-cms.elements.general.config.tab.settings')"
                        name="settings"
                        :active-tab="active"
                >
                    {{ $tc('sw-cms.elements.general.config.tab.settings') }}
                </sw-tabs-item>
            {% endblock %}
        </template>

        <template
                slot="content"
                slot-scope="{ active }"
        >
            {% block sw_cms_wbp_e_text_config_content %}
                <sw-container
                        v-if="active === 'content'"
                        class="sw-cms-wbp-e-text-config__tab-content"
                >

                    {% block sw_cms_wbp_e_text_config_titleM %}
                        <div class="wbp-text-image-config__titleM">
                            <sw-field v-model="element.config.titleM.value"
                                      class="wbp-text-image-config__titleM-block"
                                      type="text"
                                      :label="$tc('michelis.cms.elements.wbp-e-text.labels.titleM')"
                                      :placeholder="$tc('michelis.cms.elements.wbp-e-text.placeholders.titleM')">
                            </sw-field>
                        </div>
                    {% endblock %}


                    {% block sw_cms_wbp_e_text_config_title %}
                        <div class="wbp-text-image-config__title">
                            <sw-field v-model="element.config.title.value"
                                      class="wbp-text-image-config__title-block"
                                      type="text"
                                      :label="$tc('michelis.cms.elements.wbp-e-text.labels.title')"
                                      :placeholder="$tc('michelis.cms.elements.wbp-e-text.placeholders.title')">
                            </sw-field>
                        </div>
                    {% endblock %}

                    {% block sw_cms_wbp_e_text_config_textarea %}
                    <sw-cms-mapping-field
                            v-model="element.config.content"
                            :label="$tc('sw-cms.elements.text.config.label.content')"
                            value-types="string"
                    >
                        <sw-text-editor
                                v-model="element.config.content.value"
                                :allow-inline-data-mapping="true"
                                @input="onInput"
                                @blur="onBlur"
                        />

                        <div
                                slot="preview"
                                slot-scope="{ demoValue }"
                                class="sw-cms-wbp-e-text-config__mapping-preview"
                        >
                            <div v-html="$sanitize(demoValue)"></div>
                        </div>
                    </sw-cms-mapping-field>
                    {% endblock %}

                    {% block wbp_text_image_titleSecond %}
                        <div class="wbp-text-image-config__titleSecond">
                            <sw-field v-model="element.config.titleSecond.value"
                                      class="wbp-text-image-config__titleSecond-block"
                                      type="text"
                                      :label="$tc('michelis.cms.elements.wbp-e-text.labels.titleSecond')"
                                      :placeholder="$tc('michelis.cms.elements.wbp-e-text.placeholders.titleSecond')">
                            </sw-field>
                        </div>
                    {% endblock %}

                    {% block wbp_text_image_time %}
                        <div class="wbp-text-image-config__time">
                            <sw-field v-model="element.config.time.value"
                                      class="wbp-text-image-config__time-block"
                                      type="text"
                                      :label="$tc('michelis.cms.elements.wbp-e-text.labels.time')"
                                      :placeholder="$tc('michelis.cms.elements.wbp-e-text.placeholders.time')">
                            </sw-field>
                        </div>
                    {% endblock %}

                </sw-container>
            {% endblock %}

            {% block sw_cms_wbp_e_text_config_settings %}
                <sw-container
                        v-if="active === 'settings'"
                        class="sw-cms-el-config-text__tab-settings"
                >
                    {% block sw_cms_wbp_e_text_config_settings_vertical_align %}
                        <sw-select-field
                                v-model="element.config.verticalAlign.value"
                                :label="$tc('sw-cms.elements.general.config.label.verticalAlign')"
                                :placeholder="$tc('sw-cms.elements.general.config.label.verticalAlign')"
                        >
                            <option value="flex-start">
                                {{ $tc('sw-cms.elements.general.config.label.verticalAlignTop') }}
                            </option>
                            <option value="center">
                                {{ $tc('sw-cms.elements.general.config.label.verticalAlignCenter') }}
                            </option>
                            <option value="flex-end">
                                {{ $tc('sw-cms.elements.general.config.label.verticalAlignBottom') }}
                            </option>
                        </sw-select-field>
                    {% endblock %}
                </sw-container>
            {% endblock %}
        </template>
    </sw-tabs>
{% endblock %}
